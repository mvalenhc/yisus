                <% if (LIBRO.IMAGEN.mimetype.mime === 'image/jpeg') { %>
                  <img src="data:image/jpeg;base64,<%= LIBRO.IMAGEN.base64 %>" class="img-thumbnail" alt="<%= LIBRO.TITULO %>">
